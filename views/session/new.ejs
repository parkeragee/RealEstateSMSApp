<% if(flash && flash.err) { %>
	<% Object.keys(flash.err).forEach(function(error) { %>
		<p class="alert alert-danger"><%- flash.err[error] %></p>
	<% }) %>
<% } %>

<div class="container">
	<div class="form new-session">
		<img src="https://s3.amazonaws.com/tellme-app/svg-dark.svg">
		<form action="/session/create" method="POST" class="form-signin">
			<input type="text" class="form-control" name="email" placeholder="Email address">
			<input type="password" class="form-control" name="encryptedPassword" placeholder="Password">
			<input type="submit" class="btn btn-default center-block col-xs-12" value="Login">
			<p>Don't have an account? <a href="/#pricing">Sign Up</a></p>
			<input type="hidden" value="<%= _csrf %>" name="_csrf">
		</form>
	</div>
</div>